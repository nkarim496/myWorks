			$('ul.left:last').append('<li id="xls_pricelist"><a class="top xls_price" href="#" onclick="gen_price(); return false;" style="color:yellow;"><?php echo $text_xls_pricelist; ?></a></li>');
			<?php } ?>
			]]></add>
        </operation>
	
		<operation>
            <search position="before" index="1"><![CDATA[$(document).ready(function()]]></search>
            <add><![CDATA[
			 function gen_price() { 
				$('#xls_pricelist').html('<a class="top" ><img src="view/image/loading.gif" /></a>');
				$.ajax({
					url: '<?php echo HTTP_CATALOG; ?>index.php?route=product/xls_pricelist',
					type: 'post',
					data: 'action=generate',
					dataType: 'json',
					success: function(json) {
						
						if (json['redirect']) {
							location = json['redirect'];
						}
						
						if (json['error']) {
							if (json['error']['warning']) {
								$('#xls_pricelist').html('<a class="top" style="color:red;" >' + json['error']['warning'] + '</a>');
								
								$('html, body').animate({ scrollTop: 0 }, 'slow');
							}
						}	 
									
						if (json['success']) {
							$('#xls_pricelist').html('<a class="top" style="color:green;"><?php echo $text_xls_success; ?></a>');
						
							$('html, body').animate({ scrollTop: 0 }, 'slow'); 
						}	
					}
				});
				return false;
			};
			]]></add>
        </operation>
	</file>
